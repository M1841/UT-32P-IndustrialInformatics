<form asp-controller="Auth" asp-action="HandleLogin">
  <h1>Login</h1>
  <label for="username">
    Username
    <br />
    <input type="text" name="username" id="username" />
  </label>
  <br />
  <label for="password">
    Password
    <br />
    <input type="password" name="password" id="password" />
  </label>
  <br />
  <button type="submit">Login</button>
</form>
